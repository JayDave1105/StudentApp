<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">

    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>com.studentApp.AddStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>EditStudentServlet</servlet-name>
    	<servlet-class>com.studentApp.EditStudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>EditStudentServlet</servlet-name>
    	<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>DeleteStudentServlet</servlet-name>
    	<servlet-class>com.studentApp.DeleteStudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>DeleteStudentServlet</servlet-name>
    	<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
</web-app>
